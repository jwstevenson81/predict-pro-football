                    <li><a href="@Url.Action("Privacy", "Home")"><span class="main-nav-label">Privacy Policy</span></a></li>
                </ul>
            </div>
            <div class="divider">
                &nbsp;</div>
        </div>
        <div id="middle">
            <div class="content">@RenderBody()</div>
        </div>
        </div>
        <div id="footer">&nbsp;
        </div>
    </div>
    <script type="text/javascript">

        $(function () {

            $("input[type='button'], input[type='submit']").button();            

        });
    
    </script>
    </body>
</html>
