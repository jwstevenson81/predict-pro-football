<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.11/themes/black-tie/jquery-ui.css" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/PPF.css")" rel="stylesheet" type="text/css" />

    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.5.2.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.11/jquery-ui.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.8/jquery.validate-vsdoc.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    <script src=""@Url.Content("~/Scripts/jquery.qtip.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.equalheights.js")" type="text/javascript"></script>
</head>
<body>
    <div id="hd">
        <div class="logo">
        </div>
        <div class="login">
            <input type="button" id="btnMember" value="Sign Up" />
            <input type="button" id="btnLogin" value="Login" />
        </div>
    </div>
    <div id="container">
        <div id="center">
            <div style="padding: 1em;" class="content">@RenderBody()</div>
        </div>
        <div id="leftRail">
            <div style="padding: 1em; border-right: 1px solid #ccc;" class="content">
                <ul id="main-nav">
                    <li><a href="#"><span class="icon home"></span><span class="main-nav-label">Home</span></a></li>
                    <li><a href="#"><span class="icon profile"></span><span class="main-nav-label">My Profile</span></a></li>
                    <li><a href="#"><span class="icon notepad"></span><span class="main-nav-label">How to
                        Pick</span></a></li>
                    <li><a href="#"><span class="icon notepad"></span><span class="main-nav-label">Standard
                        Picks</span></a></li>
                    <li><a href="#"><span class="icon question"></span><span class="main-nav-label">About</span></a></li>
                </ul>
                <div class="divider">
                </div>
            </div>
        </div>
        <div id="rightRail">
            <div style="padding: 1em; color: #fff;" class="content">
                Right Sidebar</div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".content").equalHeights();
            $("input[type='button']").button();
        });
    </script>
</body>
</html>
